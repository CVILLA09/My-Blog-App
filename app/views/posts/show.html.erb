<div class="single-post-container">
  <div class="post--header">
    <h1>Post #<%= @post.id %> by <%= @user.name %></h1>
    <div class="post--body">
      <p><%= @post.body %></p>
    </div>
    <div class="post--stats">
      <span>Comments: <%= @post.comments.count %>, Likes: <%= @post.likes_counter %></span>
    </div>
    <% if current_user %>
      <div class="post-actions">
        <%= button_to 'Like', like_user_post_path(@user, @post), method: :post %>
      </div>
    <% end %>
  </div>

  <!-- Comments Section -->
  <div class="post--comments">
    <% @post.comments.each do |comment| %>
      <div class="comment">
        <strong><%= comment.user.name %>:</strong>
        <p><%= comment.text %></p>
      </div>
    <% end %>
  </div>

  <!-- Add a link to the new comment form -->
  <!-- Back to Posts Link -->
  <div class="button-group2">
    <%= link_to 'Add Comment', new_user_post_comment_path(@user, @post), class: 'btn btn-primary2' %>
    <%= link_to 'Back to Posts', user_posts_path(@user), class: "btn btn-secondary2" %>
  </div>
</div>
